                                            <td><a href="/Lots/wafer/mlist?transformID={{u.ID}}">{{u.ProductName}}</a></td>
                                            <td><a href="/Lots/wafer/mlist?transformID={{u.ID}}">{{u.WaferCode}}</a></td>
